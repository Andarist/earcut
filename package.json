{
  "name": "earcut",
  "version": "2.1.3",
  "description": "The fastest and smallest JavaScript polygon triangulation library for your WebGL apps",
  "main": "dist/earcut.cjs.js",
  "module": "src/earcut.js",
  "unpkg": "dist/earcut.dev.js",
  "jsdelivr": "dist/earcut.dev.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "eslint src test/test.js && tape test/test.js",
    "watch": "npm run build -- --watch",
    "prebuild": "mkdirp dist",
    "build": "rollup -c",
    "prepare": "npm run build",
    "cov": "istanbul cover test/*.js",
    "coveralls": "istanbul cover test/*.js && coveralls < ./coverage/lcov.info"
  },
  "author": "Vladimir Agafonkin",
  "license": "ISC",
  "devDependencies": {
    "benchmark": "^2.1.4",
    "coveralls": "^3.0.0",
    "eslint": "^4.14.0",
    "eslint-config-mourner": "^2.0.3",
    "istanbul": "^0.4.5",
    "mkdirp": "^0.5.1",
    "rollup": "^0.64.1",
    "rollup-plugin-uglify": "^4.0.0",
    "tape": "^4.8.0"
  },
  "eslintConfig": {
    "extends": "mourner",
    "sourceType": "module",
    "rules": {
      "no-unmodified-loop-condition": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mapbox/earcut.git"
  }
}
